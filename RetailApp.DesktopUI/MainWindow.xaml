<Window
    x:Class="RetailApp.DesktopUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Retail App"
    Width="800"
    Height="450"
    FontSize="16"
    Loaded="Window_Loaded"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Menu
            Name="menPrincipal"
            Height="auto"
            VerticalAlignment="Top"
            FontSize="14">
            <MenuItem Name="meiRegiters" Header="Cadastro">
                <MenuItem Name="meiClient" Header="Cliente" />
                <MenuItem Name="meiProduct" Header="Produto" />
            </MenuItem>
            <MenuItem Name="meiMovemnt" Header="Movimento">
                <MenuItem
                    Name="meiFiscal"
                    Click="meiFiscal_Click"
                    Header="Fiscal" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
